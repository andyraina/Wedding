<div class="page-header">
  <h3><%= @day.day_of_week %>'s Events</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
  <th>Start</th>
  <th>End</th>
  <th>Description</th>
  <th></th>
</tr>

<% @day.events.each do |event| %>

      <tr>

        <td><%= event.start_time.hour %>:<%= event.start_time.min %> </td>
        <td> <%= event.end_time.hour %>:<%= event.end_time.min %> </td>
        <td>
                      <a href="/events/<%= event.id %>">
                        <%= event.description %>
                      </a>

                  </td>
                    <td>
                      <a href="/events/<%= event.id %>" class="btn btn-primary">Show</a>
                      <a href="/events/<%= event.id %>/edit" class="btn btn-warning">Edit</a>
                      <a href="/delete_event/<%= event.id %>" class="btn btn-danger" rel="nofollow">Delete</a>

</td>
                      </tr>


                      </div>
                      </div>
                    <% end %>

</table>


<div class="row">
  <div class="col-md-12 mb-2">

    <p class="help-block">
            <h4> <a href="/events/new">or add a new event</a></h4>
                </p>

    <div class="btn-group btn-group-justified">
      <a href="/days" class="btn btn-primary">
        Back
      </a>
      <a href="/days/<%= @day.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_day/<%= @day.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
