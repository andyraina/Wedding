<div class="page-header">
  <h1>
    Agenda items
    <a href="/agenda_items/new" class="btn btn-lg btn-success">New Agenda item</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Start time</th>
        <th>End time</th>
        <th>Description</th>
        <th>Planning Status</th>
        <th>Event</th>
        <th>Leader</th>
        <th>Actions</th>
      </tr>

      <% @agenda_items.each do |agenda_item| %>
      <tr>
        <td><%= agenda_item.start_time.hour %>:<%= agenda_item.start_time.min %> </td>
        <td> <%= agenda_item.end_time.hour %>:<%= agenda_item.end_time.min %> </td>
        <td><%= agenda_item.description %></td>
        <td><%= agenda_item.status %></td>
        <td><%= agenda_item.event.description %></td>
        <td><%= agenda_item.leader %></td>
        <td>
          <a href="/agenda_items/<%= agenda_item.id %>" class="btn btn-primary">Show</a>
          <a href="/agenda_items/<%= agenda_item.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_agenda_item/<%= agenda_item.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
