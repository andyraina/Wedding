<div class="page-header">
  <h1>
    Events
    <a href="/events/new" class="btn btn-lg btn-success">New Event</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Description</th>
        <th>Day</th>
        <th>Start time</th>
        <th>End time</th>

        <th>Actions</th>
      </tr>

      <% @events.each do |event| %>
      <tr>
        <td><%= event.description %></td>
        <td><%= event.day.day_of_week %></td>
        <td><%= event.start_time.hour %>:<%= event.start_time.min %> </td>
        <td> <%= event.end_time.hour %>:<%= event.end_time.min %> </td>

        <td>
          <a href="/events/<%= event.id %>" class="btn btn-primary">Show</a>
          <a href="/events/<%= event.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_event/<%= event.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
